<%- include('../header') %>
<div class="container mt-4">
    <div class="row justify-content-center">
        <form action="/newexsubCategoryAdd" method="post" enctype="multipart/form-data" class="col-md-8">
            <div class="mb-3">
                <label for="title" class="form-label"> Category</label>
                <select onchange="categoryFilter()" name="category" id="categoryId">
                    <option  id="categoryId" value="">--Category--</option>
                    <% category.map((val)=>{ %> 
                        <option value="<%= val.id %>"><%= val.cat_name %></option>
                    <%  }) %>
                </select>
            </div>

            <div class="mb-3">
                <label  class="form-label"> Sub Category</label>
                <select name="subcategory" id="subcat">
                    <option value="">--Sub Category--</option>
                    <% subcategory.map((val)=>{ %> 
                        <option value="<%= val.id %>"><%= val.subcat_name %></option>
                    <%  }) %>
                </select>
            </div>


            <div class="mb-3">
                <label for="title" class="form-label"> Extra Sub-Category</label>
                <input type="text"  name="product" class="form-control">
            </div>

            <div class="mb-3">
                <label  class="form-label"> Qty</label>
                <input type="text"  name="qty" class="form-control">
            </div>

            <div class="mb-3">
                <label  class="form-label"> Price </label>
                <input type="text"  name="price" class="form-control">
            </div>

            <div class="mb-3">
                <label  class="form-label"> Discription </label>
                <input type="text"  name="discription" class="form-control">
            </div>

            <div class="mb-3 d-flex justify-content-center">
                <label class="form-label" for="image">			
                    <img id="imagePreview"  class="form-control" src='/public/assets/images/Noun_Project_cloud_upload_icon_411593_cc.svg.png' 
                    onchange="previewImage(this)"  
                    style=" width: 600px; height: 400px; cursor: pointer;" >
                </label>	
                <input type="file" id="image" name="image"   class="d-none form-control" onchange="previewImage(this)">
            </div>

          


            <div class="text-center">
                <button type="submit" class="btn btn-success">Save</button>
            </div>
        </form>
    </div>
</div>


<script>
    function previewImage(input) {
        const preview = document.getElementById('imagePreview');
        const file = input.files[0];
        const reader = new FileReader();

        reader.onloadend = function () {
            preview.src = reader.result;
        };

        if (file) {
            reader.readAsDataURL(file);
        } else {
            preview.src = "";
        }
    }
</script>
<!-- category filter code   -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
<script>

    function categoryFilter(){
      let id = document.getElementById('categoryId').value;
      
      $.ajax({
        type:'GET',
        url : `http://localhost:8000/categoryWiseFilter?id=${id}`,
        dataType : 'json',
        success : function(res){
            let ans = res.data
            let tbl = ''
            tbl += ` <option>---select---</option>`
            ans.map((val)=>{
                tbl += `
                    <option value=${val.id}> ${val.subcat_name}</option>
                `
            })
            document.getElementById('subcat').innerHTML = tbl;
        }
      })
    }
</script>

