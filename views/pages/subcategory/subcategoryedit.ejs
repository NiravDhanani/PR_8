<%- include('../header') %>
<div class="container mt-4">
    <div class="row justify-content-center">
        <form action="/updatesubCategory" method="post"  class="col-md-8">
            <div class="mb-3">
                <input type="hidden" name="id" value="<%= subcat.id %>">
                <label for="title" class="form-label"> Category</label>
                <select name="category" id="">
                    <option value="">--Category--</option>
                    <% category.map((val)=>{ %> 
                        <option name="category" <% if(subcat.categoryId.cat_name == val.cat_name){ %> selected <% } %> value="<%= val.id %>"><%= val.cat_name %></option>
                    <%  }) %>
                </select>
              
            </div>

            <div class="mb-3">
                <label for="title" class="form-label"> Sub-Category</label>
                <input type="text" id="category" value="<%= subcat.subcat_name %>" name="subcat_name" class="form-control">
            </div>


            <div class="text-center">
                <button type="submit" class="btn btn-success">Save</button>
            </div>
        </form>
    </div>
</div>


<script>
    function previewImage(input) {
        const preview = document.getElementById('imagePreview');
        const file = input.files[0];
        const reader = new FileReader();

        reader.onloadend = function () {
            preview.src = reader.result;
        };

        if (file) {
            reader.readAsDataURL(file);
        } else {
            preview.src = "";
        }
    }
</script>
